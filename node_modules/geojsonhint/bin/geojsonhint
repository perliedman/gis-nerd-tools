#!/usr/bin/env node

var fs = require('fs'),
    path = require('path'),
    geojsonhint = require('../'),
    colors = require('colors'),
    argv = require('optimist')
        .usage('Usage: $0 FILE.geojson')
        .alias('j', 'json')
        .describe('json', 'output json-formatted data for hints')
        .boolean('json')
        .demand(1)
        .argv;

var errors = geojsonhint.hint(fs.readFileSync(argv._[0], 'utf8'));

if (errors) {
    if (argv.json) {
        if (errors instanceof Error) {
            console.log(JSON.stringify(errors.toString(), null, 2));
        } else {
            console.log(JSON.stringify(errors, null, 2));
        }
    } else {
        if (errors instanceof Error) {
            console.log('invalid JSON');
            throw errors;
        }
        errors.forEach(function(e) {
            console.log('line %s, %s', (''+e.line), e.message.red);
        });
    }
}
